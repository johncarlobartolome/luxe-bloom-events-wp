# Ignore WordPress core files (we don’t need to version control these)
wp-admin/
wp-includes/
wp-content/plugins/
wp-content/themes/

# Ignore Local by Flywheel configuration files and environment-specific files
.local/
local-by-flywheel/

# Ignore database files and backups
*.sql
*.sql.gz
*.bak

# Ignore log files generated by Local by Flywheel
*.log

# Ignore temporary or editor-specific files
*.swp
*~
.DS_Store
Thumbs.db

# Ignore node_modules (if you’re using Node.js for frontend build)
node_modules/

# Ignore the WordPress wp-config file (you’ll handle this locally)
wp-config.php

# Ignore the Local by Flywheel database dump folder (if you’re using it)
db-backups/
